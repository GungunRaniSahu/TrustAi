{
  "manifest_version": 3,
  "name": "TrustAI Advisor",
  "version": "1.0",
  "description": "Evaluate website trustworthiness based on Privacy, Content, Credibility, and Integrity.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "frontend/background.js"
  },
  "action": {
    "default_popup": "frontend/popup.html",
    "default_icon": {
      "16": "frontend/shield.png",
      "48": "frontend/shield.png",
      "128": "frontend/shield.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["frontend/content.js"]
    }
  ],
  "icons": {
    "16": "frontend/shield.png",
    "48": "frontend/shield.png",
    "128": "frontend/shield.png"
  },
  "content_security_policy": {
  "extension_pages": "script-src 'self'; object-src 'self'",
  "worker-src": "'self'"
}

}
